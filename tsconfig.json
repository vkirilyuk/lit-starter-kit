{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "types": [
      "mocha"
    ],
    "rootDir": "./"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": []
}